<!-- Filename: Home.razor -->
@page "/"
@inject NavigationManager NavigationManager
@using System.Diagnostics
@rendermode InteractiveServer

<h3>Elevator Control</h3>

<div>
    <button @onclick="() => elevatorState = CallElevator(1)">Call to 1st Floor</button>
</div>

<div>
    <div>
        <button @onclick="() => elevatorState = CallElevator(2, Direction.Up)">Go to 2nd Floor (Up)</button>
        <button @onclick="() => elevatorState = CallElevator(2, Direction.Down)">Go to 2nd Floor (Down)</button>
    </div>
    <div>
        <button @onclick="() => elevatorState = CallElevator(3, Direction.Up)">Go to 3rd Floor (Up)</button>
        <button @onclick="() => elevatorState = CallElevator(3, Direction.Down)">Go to 3rd Floor (Down)</button>
    </div>
    <div>
        <button @onclick="() => elevatorState = CallElevator(4, Direction.Up)">Go to 4th Floor (Up)</button>
        <button @onclick="() => elevatorState = CallElevator(4, Direction.Down)">Go to 4th Floor (Down)</button>
    </div>
    <div>
        <button @onclick="() => elevatorState = CallElevator(5)">Call to 5th Floor</button>
    </div>
</div>

<div>
    <p>Elevator State: @elevatorState</p>
</div>

@code {
    private string elevatorState = "Idle";

    public string CallElevator(int floor)
    {
        // Update elevator state
        elevatorState = $"Called elevator to floor {floor}";

        // Logic to call the elevator to a specific floor
        Console.WriteLine(elevatorState);
        Debug.WriteLine(elevatorState);

        return elevatorState;
    }

    public string CallElevator(int floor, Direction direction)
    {
        // Update elevator state
        elevatorState = $"Called elevator to floor {floor} ({direction})";

        // Logic to call the elevator to a specific floor and direction
        Console.WriteLine(elevatorState);
        Debug.WriteLine(elevatorState);

        return elevatorState;
    }

    public enum Direction
    {
        Up,
        Down
    }
}
